<a asp-action="Index" asp-controller="Role" class="btn btn-secondary my-1">Back To Role</a>
<h3>Assign Permissions to Role</h3>
@using (Html.BeginForm("AssignPermissionsToRole", "Permission", FormMethod.Post))
{
    <div>
        <input type="hidden" name="RoleID" value="@ViewBag.RoleID" />


        <br />
        <label>Select Permissions:</label>
        <br />
        @foreach (var permission in ViewBag.Permissions)
        {
            <input type="checkbox" name="permissionIds" value="@permission.PermissionID" /> @permission.PermissionName
            <br />
        }
        <br />
        <input class="btn btn-success" type="submit" value="Assign Permissions" />
    </div>
}